<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomeActivity" >
    <!-- Toolbar at the top of the screen -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="4dp"
    >
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:queryHint="@string/search_hint"
        android:iconifiedByDefault="false"
        android:layout_margin="16dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/black_200"
        android:queryBackground="@null"
        />

    <ImageView
        android:id="@+id/icCart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_cart"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
    />
</LinearLayout>

    <!--Hero Section with Image and Text-->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="16dp"
       >
         <ImageView
              android:id="@+id/hero_image"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:src="@drawable/img_hero_content"
             android:background="@drawable/button_round"
             />
       <LinearLayout
           android:id="@+id/hero_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_alignStart="@+id/hero_image"
           android:layout_alignTop="@+id/hero_image"
           android:paddingHorizontal="16dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="20%"
               android:textSize="70sp"
               android:textStyle="bold"
               android:textColor="@color/black"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OFF"
               android:textSize="25sp"
               android:textStyle="bold"
               android:textColor="@color/black"
               />
       </LinearLayout>
         <TextView
              android:id="@+id/hero_text_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/hero_text"
              android:layout_marginTop="8dp"
              android:text="Get the best deals on our products!"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:layout_marginStart="16dp"
              />
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtMoreProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textColor="@color/black_500"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            />
       <ImageView
           android:id="@+id/icMoreProduct"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_arrow_forward"

           />
    </LinearLayout>
    <!-- Product List Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProductList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_product"
            />
        <TextView
            android:id="@+id/txtNoProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No Products Available"
            android:textColor="@color/black_500"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>